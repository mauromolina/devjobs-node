<main class="contenedor">
    <form action="/vacancies/edit/{{vacant.url}}" method="POST" class="default-form">
        <h3>Información general</h3>
        <div class="campo">
            <label for="">Título</label>
            <input type="text" name="title" placeholder="Ej: React Developer" value="{{vacant.title}}" required>
        </div>
        <div class="campo">
            <label for="">Empresa</label>
            <input type="text" name="company" placeholder="Ej: devJobs" value="{{vacant.company}}" required>
        </div>
        <div class="campo">
            <label for="">Ubicación</label>
            <input type="text" name="location" placeholder="Ej: Buenos Aires, Argentina" value="{{vacant.location}}" required>
        </div>
        <div class="campo">
            <label for="">Salario (USD)</label>
            <input type="text" name="salary" placeholder="Ej: 500" value="{{vacant.salary}}" required>
        </div>
        <div class="campo">
            <label for="">Contrato</label>
            <select name="contract">
                {{#contractType vacant.contract}}
                    <option value="" disabled selected>--Seleccionar una opción--</option>
                    <option value="Freelance">Freelance</option>
                    <option value="Tiempo Completo">Tiempo completo</option>
                    <option value="Medio Tiempo">Medio tiempo</option>
                    <option value="Por Proyecto">Por proyecto</option>
                {{/contractType}}
            </select>
        </div>
        <h3>Descripción del puesto</h3>
        <div class="campo descripcion">
            <label for="">Descripción</label>
            <input type="hidden" name="description" id="x" value="{{{vacant.description}}}">
            <trix-editor input="x"></trix-editor>
        </div>
        <h3>Conocimientos</h3>
        <ul class="lista-conocimientos">
            {{#selectSkills vacant.skills}}
            {{/selectSkills}}
        </ul>
        <div class="campo centrar-horizontal">
            <input type="hidden" name="skills" id="skills">
            <input type="submit" value="Guardar" class="btn btn-azul">
        </div>
    </form>
</main>